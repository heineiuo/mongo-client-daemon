{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["WebWorker", "dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "target": "ES2015",
    "types": ["@types/node"]
  },
  "include": ["src/**/*"]
}
